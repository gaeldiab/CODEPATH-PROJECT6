<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomPetsStarter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/aclonica</item>

    </style>
    <style name="TextAppearance.pic" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#073b4c</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="url_text">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:background">"@color/black"</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="id_text">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:background">"@color/black"</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>